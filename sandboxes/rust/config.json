{
	"name": "rust",
	"description": "Run Rust code in an isolated sandbox.",
	"version": "0.1.0",
	"image": "sandbox-mcp/rust:latest",
	"user": "sandbox",
	"entrypoint": "main.rs",
	"timeout": 60,
	"command": [
		"sh",
		"-c",
		"rustc -o main main.rs && ./main"
	],
	"parameters": {
		"additionalFiles": true
	},
	"security": {
		"readOnly": false,
		"capDrop": [
			"all"
		],
		"securityOpt": [
			"no-new-privileges:true"
		],
		"network": "none"
	},
	"resources": {
		"cpu": 1,
		"memory": 64,
		"processes": 64,
		"files": 96
	},
	"mount": {
		"workdir": "/sandbox",
		"tmpdirPrefix": "sandbox-mcp-",
		"scriptPerms": "0755",
		"readOnly": false
	}
}
