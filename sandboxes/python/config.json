{
	"id": "python",
	"description": "Run Python code in an isolated sandbox.",
	"hints": {
		"isDistructive": false,
		"isIdempotent": true
	},
	"version": "0.1.0",
	"image": "sandbox-mcp/python:latest",
	"user": "sandbox",
	"entrypoint": "main.py",
	"timeout": 60,
	"command": [
		"python",
		"main.py"
	],
	"parameters": {
		"additionalFiles": true
	},
	"security": {
		"readOnly": false,
		"capDrop": [
			"all"
		],
		"securityOpt": [
			"no-new-privileges:true"
		],
		"network": "none"
	},
	"resources": {
		"cpu": 1,
		"memory": 128,
		"processes": 64,
		"files": 96
	},
	"mount": {
		"workdir": "/sandbox",
		"tmpdirPrefix": "sandbox-mcp-",
		"scriptPerms": "0755",
		"readOnly": false
	}
}
